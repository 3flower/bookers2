<div class="row">
	<div class="col-xs-3">
		<h2>User info</h2>
		<%= render 'users/profile',  user: @user %>
		<h2>New book</h2>
		<%= render 'newform', book: @book %>
	</div>
	<div class="col-xs-9">
		<h2>Book detail</h2>
		<table class="table">
			<tr>
				<td>
					<%= link_to (@user) do %>
					<%= attachment_image_tag(@user, :profile_image, size: "50x50", fallback: "no-image-mini.jpg") %><br>
					<%= @user.name %>
					<% end %>
				</td>
				<td><%= link_to @book_show.title, @book %></td>
				<td><%= @book_show.body %></td>

					<% if @book_show.favorited_by?(current_user) %>
					<td>
						<%= link_to book_favorites_path(@book_show), method: :delete do %>
						<span class="glyphicon glyphicon-heart" aria-hidden="true" style="color: red;"></span>
						<%= @book_show.favorites.count %>
						<% end %>
					</td>

					<% else %>

					<td>
						<%= link_to book_favorites_path(@book_show), method: :post do %>
						<span class="glyphicon glyphicon-heart-empty" aria-hidden="true"></span>
						<%= @book_show.favorites.count %>
						<% end %>
					</td>
					<% end %>

				<td>
					<%= @book_show.book_comments.count %>件コメント
				</td>
				<% if @book_show.user == current_user %>
				<td><%= link_to "Edit",edit_book_path(@book_show), class: "btn-sm btn-success edit_book_#{@book.id}" %></td>

				<td><%= link_to "Destroy", @book_show, method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_book_#{@book.id}" %></td>
				<% end %>
			</tr>
		</table>
		<p>コメント</p>
		<table class="table">
			<% @book_show.book_comments.each do |comment| %>
				<tr>
					<%= link_to (@user) do %>
					<td>
						<%= attachment_image_tag(comment.user, :profile_image, size: "50x50", fallback: "no-image-mini.jpg") %><br>
						<%= comment.user.name %>
					</td>
					<% end %>
					<td><%= comment.comment %></td>
					<td><%= comment.created_at.strftime('%Y/%m/%d') %></td>
					<% if comment.user == current_user %>
					<td><%= link_to "Destroy", book_book_comment_path(@book_show), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_book_#{@book.id}" %>
					</td>
					<% end %>
				</tr>
			<% end %>
		</table>
		<% if @book_comment.errors.any? %>
			<h3>コメントを入れてください</h3><!--エラーメッセ-->
			<ul>
				<% @book_comment.errors.full_messages.each do |message| %>
					<li><%= message %></li>
				<% end %>
			</ul>
		<% end %>
		<p>コメント投稿</p>
		<%= form_for [@book_show,@book_comment] do |f| %>
			<%= f.text_area :comment, class: "col-xs-10" %><br>
			<%= f.submit "送信", class: "btn btn-primary col-xs-1" %>
		<% end %>
	</div>
</div>


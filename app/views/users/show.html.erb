<div class="row">
	<div class="col-xs-3">
		<%= render 'users/profile', user: @user %>
		<h2>New book</h2>
		<%= render 'books/newform', book: @book %>
		<% if @user == current_user %>
		<%= render "gmap", user: @user %>
		<% end %>
	</div>
	<div class="col-xs-9">
		<h2>User</h2>
		<table class="table table-hover table-inverse">
			<%= render "layouts/table_thead" %>
			<tbody>
				<% @books.each do |book| %>
				<tr>
					<%= render "layouts/book_table", user: book.user, book: book %>
					<%= render "layouts/edit_destroy_btn", book: book %>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>

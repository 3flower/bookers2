<h2>User info</h2>
<!-- エラーメッセージ表示-->
<% if @user.errors.any? %>
	<h3><%= @user.errors.count %>error occurrence</h3><!--エラーメッセ-->
	<ul>
		<% @user.errors.full_messages.each do |message| %>
		<li><%= message %></li>
		<% end %>
	</ul>
<% end %>
<!-- エラーメッセージ表示-->
<%= form_for(@user) do |f| %>
<div class="field">
	<%= f.label :name %><br>
	<%= f.text_field :name, class: "name" %>
</div>

<div class="field">
	<%= f.label :image %>
	<%= f.attachment_field :profile_image, class: "user_image" %>
</div>

<div class="field">
	<%= f.label :introduction %><br>
	<%= f.text_area :introduction, class: "introduction" %>
</div>
<!-- 住所登録フォーム  -->
  <div class="field">
    <%= f.label :postal_code %><br />
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
  </div>

  <div class="field">
    <%= f.label :prefecture_code %><br>
    <%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :name, :name, include_blank: '都道府県' %>
  </div>

  <div class="field">
    <%= f.label :city %><br>
    <%= f.text_field :city, autofocus: true, autocomplete: "city", id:"address_city" %>
  </div>
  <div class="field">
    <%= f.label :street%><br>
    <%= f.text_field :street, autofocus: true, id: "address_street" %>
  </div>

<div class="actions">
	<%= f.submit %>
</div>

<% end %>

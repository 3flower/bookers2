<table class="table">
	<thead>
		<tr>
			<th>image</th>
			<th>name</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% users.each do |user| %>
		<tr>
			<%= render "layouts/image_name", user: user %>
			<%= render "relationships/follow_count", user: user %>
			<td>
				<% if user != current_user %>
					<%= render "relationships/follow_button", user: user %>
				<% end %>
			</td>
			<td><%= link_to "Show", user, class: "user_#{user.id}" %></td>
		</tr>
		<% end %>
	</tbody>
</table>

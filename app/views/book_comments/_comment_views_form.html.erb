<p>コメント</p>
<table class="table">
  <% book.book_comments.each do |comment| %>
    <tr>
      <%= link_to (user) do %>
      <td>
        <%= attachment_image_tag(comment.user, :profile_image, size: "50x50", fallback: "no-image-mini.jpg") %><br>
        <%= comment.user.name %>
      </td>
      <% end %>
      <td><%= comment.comment %></td>
      <td><%= comment.created_at.strftime('%Y/%m/%d') %></td>
      <% if comment.user == current_user %>
      <td><%= link_to "Destroy", book_book_comment_path(book), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_book_#{@book.id}" %>
      </td>
      <% end %>
    </tr>
  <% end %>
</table>
<% if book_comment.errors.any? %>
  <h3>コメントを入れてください</h3><!--エラーメッセ-->
  <ul>
    <% book_comment.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<p>コメント投稿</p>
<%= form_for [book,book_comment] do |f| %>
  <%= f.text_area :comment, class: "col-xs-10" %><br>
  <%= f.submit "送信", class: "btn btn-primary col-xs-1" %>
<% end %>
